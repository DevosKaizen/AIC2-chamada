
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id          String    @id @unique
  nome        String
  email       String    @unique
  cpf         String    @unique
  password    String
  
  matriculas      Matricula[]   
}

model Professor{
  id          String   @id @unique
  nome        String
  email       String    @unique
  cpf         String    @unique
  password    String

  Turmas       Turma[]
}

model Turma{
  turma_id    String    @id @unique
  materia     String
  date        DateTime
  professor_id   String    @unique
  matricula   Matricula[]
  Professor   Professor   @relation(fields: [professor_id], references: [id])
}

model Matricula {
  aluno_id    String    @unique
  turma_id    String    @unique
  code        String?   @unique

  aluno       Aluno    @relation(fields: [aluno_id], references: [id])
  turma       Turma    @relation(fields: [turma_id], references: [turma_id])

  @@id([aluno_id, turma_id])  
}
